# 什么值得做智能体环境配置示例文件
# 复制此文件为 .env 并根据实际情况修改配置

# 服务配置
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8080
DEBUG=true

# 自塾API配置
ZISHU_API_BASE=https://zishu.co/api
ZISHU_TIMEOUT=10

# 数据源配置
# 设置为false使用真实的zishu API数据，设置为true使用模拟数据进行测试
USE_MOCK_DATA=false

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 缓存配置
CACHE_TTL=7200  # 2小时
CACHE_PREFIX=what_to_do

# 算法权重配置
ALGORITHM_WEIGHTS_URGENCY=0.35
ALGORITHM_WEIGHTS_IMPORTANCE=0.30
ALGORITHM_WEIGHTS_PERSONAL_FIT=0.25
ALGORITHM_WEIGHTS_GROWTH_VALUE=0.10

# 紧急度阈值配置(小时)
URGENCY_CRITICAL=24
URGENCY_HIGH=72
URGENCY_MEDIUM=168
URGENCY_LOW=720

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT="{time} | {level} | {message}"

# CORS配置
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080","https://zishu.co"]